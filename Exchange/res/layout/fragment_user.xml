<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/RegisterBackground">
    <RelativeLayout 
        android:layout_height="170dip"
        android:layout_width="fill_parent"
        android:background="@color/UserBG"
        >
         <ImageView 
                android:layout_height="30dip"
                android:layout_width="30dip"
                android:src="@drawable/setting"
                android:layout_margin="10dip"
                />
         <ImageView 
             	android:layout_alignParentRight="true"
                android:layout_height="30dip"
                android:layout_width="30dip"
                android:src="@drawable/talking"
                android:layout_margin="10dip"
                />
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView 
                android:id="@+id/userImage"
            android:layout_height="100dip"
            android:layout_width="100dip"
            android:scaleType="center"
            />
            <TextView 
                android:id="@+id/User_username"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14dip"
                android:text="username"
                android:layout_margin="10dip"
                android:textColor="@color/White"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@color/UserBG2" 
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/settingUserInfo"
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_height="25dip"
                android:layout_width="25dip"
                android:src="@drawable/user1"
                />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dip"
                android:textSize="12dip"
                android:textColor="@color/White"
                android:text="我的资料"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_height="25dip"
                android:layout_width="25dip"
                android:src="@drawable/user2"
                />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dip"
                android:textSize="12dip"
                android:textColor="@color/White"
                android:text="我的留言"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView 
                android:layout_height="25dip"
                android:layout_width="25dip"
                android:src="@drawable/user3"
                />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dip"
                android:textSize="12dip"
                android:textColor="@color/White"
                android:text="我的收藏"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="@drawable/white_to_gray"
            android:clickable="true"
            >
            <TextView 
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:textSize="15dip"
                android:textColor="@color/Black"
                android:text="我发布的商品"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="@drawable/white_to_gray"
            android:clickable="true"
            android:layout_marginTop="2dip"
            >
            <TextView 
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:textSize="15dip"
                android:textColor="@color/Black"
                android:text="我的订单"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="@drawable/white_to_gray"
            android:clickable="true"
            android:layout_marginTop="2dip"
            >
            <TextView 
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:textSize="15dip"
                android:textColor="@color/Black"
                android:text="退款管理"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="@drawable/white_to_gray"
            android:clickable="true"
            android:layout_marginTop="2dip"
            >
            <TextView 
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:textSize="15dip"
                android:textColor="@color/Black"
                android:text="物理详情"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:background="@drawable/white_to_gray"
            android:clickable="true"
            android:layout_marginTop="2dip"
            >
            <TextView 
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:textSize="15dip"
                android:textColor="@color/Black"
                android:text="我的账单"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>