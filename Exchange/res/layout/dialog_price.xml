<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/RegisterBackground">
    <TextView 
         android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="宝贝多少钱？"
        android:textColor="@color/Black"
        android:textSize="12dip"
        android:background="@color/White"
        android:paddingLeft="10dip"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/White"
        android:paddingLeft="10dip">
        <TextView 
            android:id="@+id/iconPrice"
            android:text="￥"
            android:textSize="10dip"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <EditText 
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iconPrice"
            android:layout_centerVertical="true"
            android:textColor="@color/Black"
            android:textSize="20dip"
            android:padding="5dip"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/White"
        android:layout_marginTop="1dip"
        android:paddingLeft="10dip">
        <TextView 
            android:id="@+id/iconOldPrice"
            android:text="原价"
            android:textSize="12dip"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <EditText 
            android:id="@+id/etOldPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iconOldPrice"
            android:layout_centerVertical="true"
            android:textColor="@color/Black"
            android:textSize="12dip"
            android:paddingLeft="10dip"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dip"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:layout_margin="1px"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="1px">
                <TextView 
                 android:id="@+id/one"
                 android:text="1"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true" 
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:id="@+id/two"
                    android:text="2"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:id="@+id/three"
                    android:text="3"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="1px">
                <TextView 
                    android:id="@+id/four"
                    android:text="4"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:id="@+id/five"
                    android:text="5"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:id="@+id/six"
                    android:text="6"
                 android:gravity="center"
                 android:textSize="18dip"
                android:layout_width="0dip"
                android:textColor="@color/Black"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="1px">
                <TextView 
                    android:id="@+id/seven"
                    android:text="7"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:id="@+id/eight"
                    android:text="8"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:text="9"
                    android:id="@+id/nine"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="1px">
                <TextView 
                    android:id="@+id/c"
                    android:text="C"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:id="@+id/zero"
                    android:text="0"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
                <TextView 
                    android:id="@+id/dot"
                    android:text="."
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/Black"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/white_to_gray"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
            </LinearLayout>
            
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="1px"
            android:orientation="vertical">
            <TextView 
                 android:id="@+id/cancel"
                android:text="取消"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/White"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:background="#6CCFEF"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:clickable="true"
                android:onClick="cilckMyKeyboard"/>
            <TextView 
                 android:id="@+id/enter"
                android:text="确定"
                 android:gravity="center"
                 android:textSize="18dip"
                 android:textColor="@color/White"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:background="#EB6774"
                android:layout_weight="1"
                 android:layout_margin="1px"
                 android:clickable="true"
                 android:onClick="cilckMyKeyboard"/>
        </LinearLayout>
    </LinearLayout >

</LinearLayout>