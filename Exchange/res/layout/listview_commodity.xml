<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RegisterBackground"
    android:orientation="vertical" 
    android:paddingBottom="5dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip" 
        android:background="@drawable/white_to_gray">

        <ImageView
            android:id="@+id/listview_commodity_img"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dip"
            android:background="@color/RegisterBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/listview_commodity_img" 
            android:orientation="vertical"
            android:padding="5dip"
            android:layout_marginTop="5dip">

            <TextView
                android:id="@+id/listview_commodity_name"
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:gravity="center_vertical"
                android:textSize="11dip"
                android:textColor="@color/Black" />
            <LinearLayout 
                android:layout_height="15dip"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                android:id="@+id/listview_commodity_expectPrice_label"
                android:text="现价:"
                android:layout_width="wrap_content"
                android:layout_height="13dip"
                android:textSize="9dip" 
                android:textColor="@color/Red"/>
            <TextView
                android:id="@+id/listview_commodity_expectPrice"
                android:layout_width="wrap_content"
                android:layout_height="13dip"
                android:textSize="9dip" 
                android:textColor="@color/Red"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_height="15dip"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                android:id="@+id/listview_commodity_degree_label"
                android:text="新旧程度:"
                android:layout_width="wrap_content"
                android:layout_height="13dip"
                android:textSize="9dip" 
                android:textColor="@color/Black"/>
            <TextView
                android:id="@+id/listview_commodity_degree"
                android:layout_width="wrap_content"
                android:layout_height="13dip"
                android:textSize="9dip"
                android:textColor="@color/Black" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>